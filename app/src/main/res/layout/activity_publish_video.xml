<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/rl_publish_video"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".publish.PublishVideoActivity"
android:fitsSystemWindows="true"
android:orientation="vertical">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center_vertical">
            <TextView
                style="@style/toolBarText.publish"
                android:id="@+id/tv_publish_video_cancel"
                android:text="取消"
                android:onClick="exit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                style="@style/toolBarText.publish"
                android:id="@+id/tv_publish_video_confirm"
                android:textColor="@color/purple_red"
                android:text="发布"
                android:onClick="publish"/>
        </LinearLayout>
        <TextView style="@style/divider" />
        <!--封面图片-->
        <ProgressBar
            android:id="@+id/pb_upload"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:max="100"
            android:progress="0"/>
        <TextView
            android:id="@+id/tv_speed"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:background="@color/gray"
            android:visibility="gone"
            android:text=""
            tools:ignore="RtlSymmetry" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <ImageView
                android:id="@+id/iv_publish_video_cover"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_publish_video_upload"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/purple_red"
                android:fontFamily="@font/fzdx_medium"
                android:textSize="16sp"
                android:background="@drawable/redpurple_back"
                android:text="上传封面"
                android:onClick="chooseCover"/>
        </FrameLayout>
        <TextView style="@style/divider" />
        <!--封面-->
        <LinearLayout
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="uploadVideo">
            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="视频"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:text="*"/>
            <TextView
                android:id="@+id/ed_publish_video_cover"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:text="请选择视频"
                android:textSize="16sp"
                android:background="@null"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_enter" />
        </LinearLayout>
        <TextView style="@style/divider" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="标题"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:text="*"/>
            <EditText
                android:id="@+id/ed_publish_video_title"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填写标题"
                android:text=""
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>

        <TextView style="@style/divider" />

        <!--分类-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="类型"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:text="*"/>

            <Spinner
                android:id="@+id/sp_publish_video"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:entries="@array/craft_type" />
        </LinearLayout>

        <TextView style="@style/divider" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <TextView
                android:gravity="top"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="简介"/>
            <EditText
                android:id="@+id/ed_publish_video_detail"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="可填写简介"
                android:text=""
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>

        <TextView style="@style/divider" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <TextView
                android:gravity="top"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="发表动态"/>
            <EditText
                android:id="@+id/ed_publish_video_topic"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="编辑此投稿的动态，把稿件推荐给粉丝"
                android:text=""
                android:textSize="16sp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>