    <LinearLayout style="@style/drawer_menu_layout"
        android:onClick="uploadArticle">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_upload" />

        <TextView
            style="@style/drawer_menu_text"
            android:text="上传图文" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_enter" />
    </LinearLayout>

    <LinearLayout style="@style/drawer_menu_layout"
        android:onClick="uploadVideo">

        <ImageView
