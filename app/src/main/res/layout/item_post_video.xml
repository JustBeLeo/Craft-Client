<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corners"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_item_post_video_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@mipmap/cover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical|bottom"
                android:paddingStart="10dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_grey_back">

                    <TextView
                        android:id="@+id/tv_item_post_video_time"
                        style="@style/item_post_text"
                        android:padding="5dp"
                        android:text="5:30" />

                    <TextView
                        style="@style/item_post_text"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:text="播放"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_item_post_video_played"
                        style="@style/item_post_text"
                        android:text="5.5万" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_post_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical|top"
                android:paddingStart="10dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_item_post_video_title"
                    style="@style/item_post_text"
                    android:background="@drawable/round_corners_grey_back"
                    android:padding="5dp"
                    android:text="冰与火之间的绝美史诗"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
