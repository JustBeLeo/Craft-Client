<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/iv_item_cr_avatar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/avatar_round"/>
    <TextView
        android:id="@+id/tv_item_cr_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corners_orange_back_big"
        android:textColor="#FFF"
        android:gravity="center"
        android:fontFamily="@font/fzdx_medium"
        android:text="这是一段测试文字"/>

</LinearLayout>
